<h1>Scheduler</h1>
<form action="/schedule" method="post">
    <br>
    <h5>Note: Maximum Three Day Range</h5>
    <label for=""> Start Date:&nbsp &nbsp </label>
        <input id="startdate" type="date" name="startdate">
    <br>
    <label for=""> End Date:&nbsp &nbsp &nbsp </label>
        <input type="date" name="enddate">
    <br><br>
    <label for="budget">Budget per Event: &nbsp </label>
    <input type="number" name="budget">
    <br><br>
    <label for="">Interests: &nbsp &nbsp &nbsp</label>
    <select id="interests" name="interests" multiple>
        <option value="Theatre">Theatre</option>
        <option value="Music">Music</option>
        <option value="Sports">Sports</option>
        <option value="Comedy">Comedy</option>
        <option value="Religion">Religion</option>
    </select>
    <br><br>
    <label for="">Group Type: &nbsp</label>
    <select id="group_type" name="group_type">
      <option value="none"></option>
        <option value="Couple">Couple</option>
        <option value="Family">Family</option>
        <option value="Friends">Friends</option>
    </select>
    <br>
    <!-- <button type="submit" name="button"class="btn btn-success">Find Single Event</button><br><br> -->
    <br>
    <button type="submit" name="button"class="btn btn-primary">Generate Schedule of Events</button>
</form>
